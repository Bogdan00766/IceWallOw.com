
@model List<IceWallOw.Application.Dto.ProductDto>

@{
    ViewData["Title"] = "Home Page";
}
@section Styles {
    <link href="@Url.Content("~/css/ProductDescStyle.css")" rel="stylesheet" type="text/css" />
}
<link rel="stylesheet" type="text/css" href="/css/style.css">
 <div class="container" id="product-section">
      <div class="row">
        <div class="col-md-6">
          <img
           src="~/images/car.jpg"
           alt="Kodak Brownie Flash B Camera"
           class="image-responsive"
           style="max-width: 100%"
          />
         </div>

         <div class="col-md-6">
          <div class="row">
           <div class="col-md-12">
            <h1>Kodak 'Brownie' Flash B Camera</h1>
           </div>
          </div><!-- end row-->
          
