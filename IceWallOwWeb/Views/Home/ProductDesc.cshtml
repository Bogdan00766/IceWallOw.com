
@model IceWallOw.Application.Dto.ProductDto

@{
    ViewData["Title"] = "Home Page";

}
@section Styles {
    <link href="@Url.Content("~/css/ProductDescStyle.css")" rel="stylesheet" type="text/css" />
}

<link rel="stylesheet" type="text/css" href="/css/style.css">
 <div class="container" id="product-section" style="margin-top: 100px">
      <div class="row">
        <div class="col-md-6">
          <img
           src="/images/unknown.jpg"
           class="image-responsive"
           style="max-width: 100%"
          />
         </div>

         <div class="col-md-6">
          <div class="row">
           <div class="col-md-12">
            <h1>@Model.Name</h1>
           </div>
          </div>
          
          <div class="row">
            <div class="col-md-12">
             <span class="label label-primary">@Model.Location</span>
            </div>
           </div>

           <div class="row">
            <div class="col-md-12">
             <p>
              @Model.Description
             </p>
            </div>
           </div>
          
           <div class="row">
            <div class="col-md-12 bottom-rule">
             <h2 class="product-price">Cena: @Model.Price zł</h2>
            </div>
           </div>

           <div class="col-md-6">
            <a href="/Home/Index" class="btn btn-primary" >
             Powrót do menu
            </a>
           </div>
          </div>

         </div>

      </div>
     </div>
