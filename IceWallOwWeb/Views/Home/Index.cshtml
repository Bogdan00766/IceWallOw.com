
@model List<IceWallOw.Application.Dto.ProductDto>


@{
    ViewData["Title"] = "Home Page";
}

      <div class="row"> 
        <div class="col-lg-3 form-filter">
            <h3>Filtrowanie danych</h3>
            <input class="form-control me-2" type="text" placeholder="Nazwa produktu"  id="name">
            <input class="form-control me-2" type="number"  placeholder="Cena minimalna" id="priceMin">
            <input class="form-control me-2" type="number"  placeholder="Cena maksymalna" id="priceMax">
            <input class="form-control me-2" type="text"  placeholder="Kategoria" id="categoryName">
            <input class="form-control me-2" type="number"  placeholder="Dystans" id="distance">
            <input class="form-control me-2" type="text"  placeholder="Lokalizacja" id="location1">
             <button class="btn" onclick=processData()>Wyszukaj</button>
        </div>
        <div class="col-lg-9">
