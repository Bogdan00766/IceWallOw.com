    <h1>Produkty</h1>
    <div class="row products"> 
@foreach (var product in Model)
{
    
    <div class="card product" style="width: 18rem;">
      <img class="card-img-top" src="/images/unknown.jpg" alt="Card image cap"/>
        <div class="card-body">
            <h5 class="card-title">@product.Name</h5>
            <p class="card-text">@product.Description</p>
            <p class="card-text">@product.Price zł</p>
            <p class="card-text">@product.CategoryName</p>
            <p class="card-text">@product.Location</p>
            <a href="/Home/ProductDesc?id=@product.Id" class="btn btn-primary">Opis produktu</a>
        </div>
      </div>
    

}
     </div>
  </div>
   <script type="text/javascript">
       function processData(){
           var name = document.querySelector('#name').value;
           var priceMin = document.querySelector('#priceMin').value;
           var priceMax = document.querySelector('#priceMax').value;
           var categoryName = document.querySelector('#categoryName').value;
           var location1 = document.querySelector('#location1').value;
           var distance = document.querySelector('#distance').value;
           
           location.href ='?name='+ name +"&priceMin=" + priceMin + "&priceMax=" + priceMax + "&location=" +  location1 + "&distance=" +  distance;
       }
       </script>

