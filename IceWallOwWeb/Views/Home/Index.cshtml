
@model List<IceWallOw.Application.Dto.ProductDto>


@{
    ViewData["Title"] = "Home Page";
}

      <div class="row"> 
        <div class="col-lg-3 form-filter">
            <h3>Filtrowanie danych</h3>
            <input class="form-control me-2"  placeholder="Nazwa produktu" aria-label="Search" id="name">
            <input class="form-control me-2"  placeholder="Cena minimalna" aria-label="Search" id="priceMin">
            <input class="form-control me-2"  placeholder="Cena maksymalna" aria-label="Search" id="priceMax">
            <button class="btn btn-outline-success" type="submit" onclick="processData()">Search</button>
        </div>
        <div class="col-lg-9">
