
@model IceWallOw.Application.Dto.RegisterUserDto
@ViewData["body_response"] 
@using (Html.BeginForm("RegisterPage", "Home", FormMethod.Post))
 {
<section class="vh-60">
      <div class="container-fluid">
        <div class="row">
          <div class="col-sm-6 text-black">
   
            <div>
    
              <form style="width: 20rem;">
    
                <h3 class="pb-3" style="letter-spacing: 1px;">Rejestracja</h3>
                
                <div class="form-outline mb-4">
                  @Html.TextBoxFor(m => m.Name,new {@class="form-control form-control-lg"})
                  <label class="form-label" for="form2Example18">Imię</label>
                </div>

                <div class="form-outline mb-4">
                  @Html.TextBoxFor(m => m.LastName,new {@class="form-control form-control-lg"})
                  <label class="form-label" for="form2Example18">Nazwisko</label>
                </div>

                <div class="form-outline mb-4">
                  @Html.TextBoxFor(m => m.EMail,new {@class="form-control form-control-lg"})
                  <label class="form-label" for="form2Example18">Email</label>
                </div>
    
                <div class="form-outline mb-4">
                  @Html.TextBoxFor(m => m.Password,new {@class="form-control form-control-lg"})
                  <label class="form-label" for="form2Example28">Hasło</label>
                </div>
    
                <div class="pt-2 mb-4">
                  <button class="btn btn-lg" type="submit">Zarejestruj się</button>
                </div>
    
              </form>
    
            </div>
            <div>@ViewData["body_response"]</div>
          </div>

        </div>
      </div>
    </section>
    }